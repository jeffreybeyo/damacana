@model IEnumerable<damacana.Models.Product>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
<h2>Products</h2>

<div class="alert alert-info" role="alert"><a class="btn btn-info" href="@Url.Action("AddProduct")">Add Product</a> </div>

<br />


@foreach (damacana.Models.Product p in Model)
{
    <div class="panel panel-default col-lg-6">
        <div class="panel-body">
            <div class="media">
                <div class="media-left">
                    <img class="media-object" src="http://www.akcdegisim.com/css/images/e9.jpg" width="100">
                </div>
                <div class="media-body">
                    <h4 class="media-heading">@p.Name</h4>
                    <p>Dogal kaynak suyu <span class="label label-warning">@p.Price ₺</span></p>
                    <a class="btn btn-default" href="@Url.Action("EditProduct", new { id = p.Id })"><b>Edit</b></a>
                    <a class="btn btn-default" href="@Url.Action("DeleteProduct", new { id = p.Id })"><b>Delete</b></a>
                    <a class="btn btn-info" href="@Url.Action("AddtoCart", new { id = p.Id })">Add to cart &nbsp; <span class="glyphicon glyphicon-log-in"></span></a>
                </div>
            </div>
            </div>
        </div>
}
