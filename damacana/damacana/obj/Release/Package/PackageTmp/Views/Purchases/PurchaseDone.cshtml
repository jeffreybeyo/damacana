@using damacana.Models
@model damacana.Models.Purchase
@{
    ViewBag.Title = "PurchaseDone";
}

<h2>Purchase Done</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Are you sure?</h3>
    </div>
    <div class="panel-body">
        <span class="label label-default">Purchase Date: @Model.CreatedOn <br />Total price: @Model.TotalPrice TL</span>
        <br />
        <div class="list-group">
            <h4 class="list-group-item-heading">List of Products</h4>
            @for (int i = 0; i < Model.PurchaseList.Count(); i++)
            {
                <p class="list-group-item-text">@Model.PurchaseList[i].Name, @Model.PurchaseList[i].Price</p>
            }
        </div>

    </div>
</div>
<center>
    <nav>
        <table>
            <tr>
                <td>
                    <ul class="pager">
                        <li><a href="@Url.Action("PurchaseHistory")">Purchase History </a></li>
                        <li><a href="@Url.Action("Index","Products")">Products</a></li>
                    </ul>
                </td>
            </tr>
        </table>
    </nav>
</center>