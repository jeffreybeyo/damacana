@using damacana.Models
@model List<damacana.Models.Product>

@{
    ViewBag.Title = "Home Page";
}


<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <div class="panel panel-default">

                <div class="panel-heading">
                    <form class="form-inline" role="search">
                        <div class="form-group"><input type="text" class="form-control" size="25" id="searchproduct" placeholder="Search products by name">
                        </div>
                        <button type="submit" class="btn btn-info">Search</button>
                    </form>
                </div>


                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                    <th>Add to Cart</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Product p in Model)
                                {
                                <tr>
                                    <td>@p.Id</td>
                                    <td>@p.Name</td>
                                    <td>@p.Price</td>
                                    <td>
                                        <a href="#">
                                            <span class="glyphicon glyphicon-edit"></span>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="#">
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="#">
                                            <span class="glyphicon glyphicon-arrow-up"></span>
                                        </a>
                                    </td>
                                </tr>}
                        </tbody> 
                         </table>   
                    </div>
                </div>
            </div>
        </div>
       
        <div class="col-sm-4">
            <div class="panel panel-default">

                <div class="panel-heading"> <h4> Add new product </h4> </div>

                <div class="panel-body">
                    @using (Html.BeginForm("SaveProduct", "Home", FormMethod.Post))
                    {
                        <table>
                            <tr>
                                <td>
                                    <label for="name">Name:</label><br />
                                    @Html.TextBox("Name")
                                </td>
                            </tr>
                            <td>
                                <label for="name">Price:</label><br />
                                @Html.TextBox("Price")
                            </td>
                            <tr>
                                <td><br />
                                    <button type="submit" class="btn btn-info">Submit</button>
                                    </td>
                            </tr>
                        </table>
                    }
                </div>
                
            </div>
        </div></div></div>
